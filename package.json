{
  "name": "bedrock",
  "version": "1.0.0",
  "description": "System for data inventory and dependency management",
  "main": "scripts/index.js",
  "scripts": {
    "checkin": "echo \"Error - checkin command not yet implemented\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cityofasheville/bedrock.git"
  },
  "keywords": [
    "data management",
    "open data"
  ],
  "author": "Eric Jackson <ejackson@ashevillenc.gov>",
  "license": "MIT",
  "homepage": "https://github.com/cityofasheville/bedrock",
  "dependencies": {
    "bunyan": "^1.8.5",
    "coa-node-logging": "^2.0.3",
    "dotenv": "^2.0.0",
    "mssql": "^3.3.0",
    "nodemailer": "^4.6.6",
    "pg": "^6.1.6",
    "pg-pool": "^1.6.0",
    "toposort": "^1.0.0"
  },
  "optionalDependencies": {
    "msnodesqlv8": "^0.3.1"
  },
  "devDependencies": {
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "no-console": 0,
      "no-prototype-builtins": 0,
      "max-len": [
        "error",
        100,
        {
          "ignoreTrailingComments": true
        }
      ]
    },
    "env": {
      "mocha": true
    }
  }
